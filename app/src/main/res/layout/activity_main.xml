<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <TextClock
        android:id="@+id/simpleTextClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="180sp" />

    <!--Day of week (for now(?) with date)-->
    <TextView
        android:id="@+id/calendarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        app:layout_constraintTop_toBottomOf="@id/simpleTextClock" />

    <!--Date ??? -->

    <!--Weather-->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/forecastGraph"
        android:layout_width="600dp"
        android:layout_height="600dp"
        app:layout_constraintTop_toTopOf="@id/calendarTextView" />

    <WebView
        android:id="@+id/currentWeatherImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/forecastGraph" />

    <TextView
        android:id="@+id/currentTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/currentWeatherImage"
        app:layout_constraintLeft_toRightOf="@id/currentWeatherImage" />

    <com.vynaloze.smartmirror.view.WeatherForecastView
        android:id="@+id/weatherForecastView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/currentWeatherImage" />

    <com.vynaloze.smartmirror.view.WeatherForecastView
        android:id="@+id/weatherForecastView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/weatherForecastView1"
        app:layout_constraintTop_toBottomOf="@+id/currentWeatherImage" />

    <com.vynaloze.smartmirror.view.WeatherForecastView
        android:id="@+id/weatherForecastView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/weatherForecastView2"
        app:layout_constraintTop_toBottomOf="@+id/currentWeatherImage" />


</android.support.constraint.ConstraintLayout>