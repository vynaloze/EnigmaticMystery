<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <WebView
        android:id="@+id/weatherInfoImage"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/currentTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="60sp"
        app:layout_constraintLeft_toRightOf="@id/weatherInfoImage"
        app:layout_constraintTop_toTopOf="@id/weatherInfoImage" />

    <TextSwitcher
        android:id="@+id/weatherComment"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/weatherInfoImage"
        app:layout_constraintRight_toRightOf="parent" />

</merge>